version: '2'

services:
  app:
    environment:
      # This is required when nginx-proxy is enabled.
      - VIRTUAL_HOST=app.mobx.dev

  storybook:
    environment:
      # This is required when nginx-proxy is enabled.
      - VIRTUAL_HOST=storybook.mobx.dev

  nginx-proxy:
    image: jwilder/nginx-proxy
    ports:
      - "80:80"
    volumes:
      - /var/run/docker.sock:/tmp/docker.sock:ro
